<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:background="@drawable/cenario2"
>

    <Button
        android:id="@+id/btnJogar"
        android:layout_width="135px"
        android:layout_height="65px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Jogar" >
    </Button>

    <Button
        android:id="@+id/btnSobre"
        android:layout_width="135px"
        android:layout_height="65px"
        android:layout_alignLeft="@+id/btnJogar"
        android:layout_below="@+id/btnJogar"
        android:text="Sobre" >
    </Button>

    <Button
        android:id="@+id/btnSair"
        android:layout_width="135px"
        android:layout_height="65px"
        android:layout_alignLeft="@+id/btnSobre"
        android:layout_below="@+id/btnSobre"
        android:text="Sair" >
    </Button>


</RelativeLayout>